// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id                 Int @id @default(autoincrement())
  type               String
  createdAt          DateTime @default(now())
  date               DateTime @default(now())
  isPublished        Boolean
  likes              String[]
  comments           Comment[]
  tags               String[]
  isRepost           Boolean
  authorId           String
  originalAuthorId   Boolean
  originalId         Int
  content            Json
}

model Comment {
  id          Int @id @default(autoincrement())
  createdAt   DateTime @default(now())
  text        String
  post        Post @relation(fields: [postId], references: [id])
  postId      Int
  userId      String
}
